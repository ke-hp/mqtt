{
  "compitlerOtions": {
    "mofule":"commonjs",
    "target":"es5",
    "experimentalDeconratrs":true,
    "emitDecoratorMetadata":true,
    "noEmitHelpers":true,
    "noEmitOnErrot":true,
    "lib":[
      "es6",
      "dom",
      "es2015.iterable"
    ],
    "baseUrl":".",
    "paths":{
      "~/*":[
        "src/*"
      ],
      "*":[

      ]
    }  
  },
  "exclude":[
    "node_modules"
  ],
  "extends": ["tslint:recommended"],
  "rules": {
    "no-var-requires": false,
    "no-console": false,
    "max-line-length": false,
    "no-namespace": [false, "error"],
    "interface-name": [true, "never-prefix"],
    "object-literal-sort-keys": false,
    "indent": [true, "tabs", 2],
    "only-arrow-functions":true,
  }
}
